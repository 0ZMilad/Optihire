{
  "name": "optihire-monorepo",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "dev:frontend": "pnpm --filter optihire dev",
    "dev:backend": "cd apps/backend && uvicorn app.main:app --reload",
    "lint": "pnpm --filter optihire lint",
    "format": "pnpm --filter optihire format",
    "build": "pnpm --filter optihire build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}